<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pomodoro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/flying_orange</item>
        <item name="colorPrimaryVariant">@color/flying_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/flying_bright_orange</item>
        <item name="colorSecondaryVariant">@color/flying_bright_gray</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/flying_orange</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
        <item name="chipStyle">@style/CustomFilterChipStyle</item>

        <item name="android:actionButtonStyle">@style/CustomActionButtonStyle</item>
        <item name="actionButtonStyle">@style/CustomActionButtonStyle</item>


    </style>





    <style name="Theme.Pomodoro" parent="Base.Theme.Pomodoro"/>

    <style name="Theme.Pomodoro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Pomodoro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pomodoro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>